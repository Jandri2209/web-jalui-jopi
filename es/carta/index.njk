---
layout: base.njk
title: Carta
lang: es
permalink: /es/carta/
alt: {"en": "/en/menu/", "fr": "/fr/carte/"}
---
{% set MENU = menu_es %}
<article>
  <header class="menu-hero">
    <img src="https://placehold.co/1600x600?text=Bar+Jalui+Jopi" alt="Bar Jalui Jopi">
    <h1 style="margin-top:10px">{{ i18n.es.Carta }}</h1>
    <p class="lead-note">{{ i18n.es.PricesNote }} <time>{{ "now" | date("es-ES") }}</time></p>
  </header>

  {% for cat in MENU.categories %}
    <section class="menu-cat">
      <img src="{{ cat.image }}" alt="{{ cat.title }}">
      <h3>{{ cat.title }}</h3>
      <div class="menu-items">
        {% for it in cat.items %}
          <div class="name">
            {{ it.name }}
            {% if it.allergens and (it.allergens | length) %}
              <span class="allergens">
                {% for a in it.allergens %}<span class="a" title="{{ i18n.es.Alérgenos or 'Alérgenos' }}">{{ a }}</span>{% endfor %}
              </span>
            {% endif %}
          </div>
          <div class="price">{{ it.price | round(2) }} €</div>
        {% endfor %}
      </div>
    </section>
  {% endfor %}
</article>
