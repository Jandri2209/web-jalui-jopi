---
layout: base.njk
title: Carta
lang: es
permalink: /carta/
alt: {"en": "/en/menu/", "fr": "/fr/carte/"}
---
{% set MENUS = { 'es': menu_es, 'en': menu_en, 'fr': menu_fr } %}
{% set T = i18n[lang] or i18n.es %}
{% set MENU = MENUS[lang] or menu_es %}

{% set ICON = {
        'gluten':'/images/icons/allergens/gluten.svg',
        'huevo':'/images/icons/allergens/huevo.svg',
        'lácteos':'/images/icons/allergens/lacteos.svg',
        'pescado':'/images/icons/allergens/pescado.svg',
        'moluscos':'/images/icons/allergens/moluscos.svg',
        'crustáceos':'/images/icons/allergens/crustaceos.svg',
        'soja':'/images/icons/allergens/soja.svg',
        'sésamo':'/images/icons/allergens/sesamo.svg',
        'mostaza':'/images/icons/allergens/mostaza.svg',
        'apio':'/images/icons/allergens/apio.svg',
        'cacahuetes':'/images/icons/allergens/cacahuetes.svg',
        'frutos de cáscara':'/images/icons/allergens/frutos_de_cascara.svg',
        'sulfitos':'/images/icons/allergens/sulfitos.svg'
      } %}

<article>
  <header class="menu-hero">
    <img src="/images/home/menu-hero.webp" alt="Jalui Jopi">
    <h1 style="margin-top:10px">{{ T.Carta }}</h1>
    <p class="lead-note">
      {{ T.PricesNote }}
      {% set LOCALE = { 'es': 'es-ES', 'en': 'en-GB', 'fr': 'fr-FR' } %}
      <time>{{ "now" | date(LOCALE[lang] or "es-ES") }}</time>
    </p>
  </header>

  {% for cat in MENU.categories %}
    <section class="menu-cat">
      {% if cat.image %}<img src="{{ cat.image }}" alt="{{ cat.title }}">{% endif %}
      <h3>{{ cat.title }}</h3>

    <div class="menu-items">
      {% for it in cat.items %}
        {% set allergens = it.allergens or (it.ingredients | inferAllergens) %}
        <div class="menu-row">
          <div class="name">
            {{ it.name }}
            {% if it.ingredients %}
              <span class="ingredients">— {{ it.ingredients | join(", ") }}</span>
            {% endif %}
          </div>

          <div class="icons">
            {% for a in allergens %}
              <img class="ico" src="{{ ICON[a] }}" alt="{{ T.AllergenNames[a] or a }}" title="{{ T.AllergenNames[a] or a }}">
            {% endfor %}
          </div>

          <span class="dots" aria-hidden="true"></span>

          {% if it.price %}
            <div class="price">{{ it.price | currency(lang) }}</div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
    </section>
  {% endfor %}
  <hr class="soft">
  <section class="allergen-legend">
    <h4>{{ T.LegendTitle }}</h4>
    {% set ORDER = [
      'gluten','huevo','lácteos','pescado','moluscos','crustáceos',
      'soja','sésamo','mostaza','apio','cacahuetes','frutos de cáscara','sulfitos'
    ] %}
    <ul class="legend-grid">
      {% for k in ORDER %}
        <li>
          <img src="{{ ICON[k] }}" alt="{{ T.AllergenNames[k] or k }}" width="22" height="22">
          <span>{{ T.AllergenNames[k] or k }}</span>
        </li>
      {% endfor %}
    </ul>
    <p class="lead-note" style="margin-top:.4rem">{{ T.AllergenDisclaimer }}</p>
    <div class="cta-row">
      <a class="btn" href="{{ lang == 'en' ? '/en/contact/' : (lang == 'fr' ? '/fr/contact/' : '/contacto/') }}">
        {{ T.CTA_Book }}
      </a>
      <a class="btn alt" href="/assets/pdf/menu-{{ lang == 'en' ? 'en' : (lang == 'fr' ? 'fr' : 'es') }}.pdf" target="_blank" rel="noopener">
        {{ T.CTA_DownloadPDF }}
      </a>
    </div>
  </section>
</article>
