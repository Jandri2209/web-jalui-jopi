---
layout: base.njk
title: Carte
lang: fr
permalink: /fr/carte/
alt: {"es": "/carta/", "en": "/en/menu/"}
---
{% set MENUS = { 'es': menu_es, 'en': menu_en, 'fr': menu_fr } %}
{% set T = i18n[lang] or i18n.fr %}
{% set MENU = MENUS[lang] or menu_fr %}

<article>
  <header class="menu-hero">
    <img src="/images/menu-hero.jpg" alt="Jalui Jopi">
    <h1 style="margin-top:10px">{{ T.Carta }}</h1>
    <p class="lead-note">
      {{ T.PricesNote }}
      <time>{{ "now" | date("fr-FR") }}</time>
    </p>
  </header>

  {% for cat in MENU.categories %}
    <section class="menu-cat">
      {% if cat.image %}<img src="{{ cat.image }}" alt="{{ cat.title }}">{% endif %}
      <h3>{{ cat.title }}</h3>
      <div class="menu-items">
        {% for it in cat.items %}
          {% set allergens = it.allergens or (it.ingredients | inferAllergens) %}
          <div class="name">
            {{ it.name }}
            {% if it.ingredients %}
              <span class="ingredients">â€” {{ it.ingredients | join(", ") }}</span>
            {% endif %}
            {% if (allergens | length) %}
              <span class="allergens">
                {% for a in allergens %}
                  <span class="a" title="{{ T.AllergenNames[a] or a }}">{{ a }}</span>
                {% endfor %}
              </span>
            {% endif %}
          </div>
          {% if it.price %}
            <div class="price">{{ it.price | currency(lang) }}</div>
          {% endif %}
        {% endfor %}
      </div>
    </section>
  {% endfor %}
</article>
