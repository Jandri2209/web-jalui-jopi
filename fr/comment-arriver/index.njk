{% set addr = (site.address | replace("¬∑"," ") | trim) %}
{% set qAddr = addr | urlencode %}
{% set pid = site.placeId %}
{% set hasCoords = site.lat and site.lng %}
{% set zoom = 16 %}

{% if hasCoords %}
  {% set qCoords = site.lat ~ "," ~ site.lng %}
{% else %}
  {% set qCoords = "" %}
{% endif %}

{# Enlace externo: preferimos place_id si existe #}
{% if pid %}
  {% set mapsHref = "https://www.google.com/maps/search/?api=1&query=" ~ (hasCoords and qCoords or qAddr) ~ "&query_place_id=" ~ pid %}
  {% set writeReviewHref = "https://search.google.com/local/writereview?placeid=" ~ pid %}
{% else %}
  {% set mapsHref = "https://www.google.com/maps/search/?api=1&query=" ~ (hasCoords and qCoords or qAddr) %}
  {% set writeReviewHref = mapsHref %}
{% endif %}

{# Iframe sin API key: prioridad -> site.mapsEmbed > coords > direcci√≥n #}
{% if site.mapsEmbed %}
  {% set mapsIframe = site.mapsEmbed %}
{% elif hasCoords %}
  {% set mapsIframe = "https://www.google.com/maps?output=embed&q=" ~ qCoords ~ "&z=" ~ zoom %}
{% else %}
  {% set mapsIframe = "https://www.google.com/maps?output=embed&q=" ~ qAddr ~ "&z=" ~ zoom %}
{% endif %}

<section class="section">
  <h1>{{ i18n.fr.HowToGetHere }}</h1>

  <div class="gethere-grid">
    <div class="card contact-box">
      <h3>{{ i18n.fr.Address }}</h3>
      <p>üìç {{ site.address }}</p>

      <div class="cta-row">
        <a class="btn" href="tel:+34948840496">üìû {{ i18n.fr.Call }}</a>
        <a class="btn alt" href="mailto:{{ site.email }}">‚úâ {{ i18n.fr.Write }}</a>
      </div>

      <a class="btn wide" href="{{ mapsHref }}" target="_blank" rel="noopener">
        {{ i18n.fr.OpenInMaps or "Ouvrir dans Google Maps" }}
      </a>
    </div>

    <div class="map-card">
      <div class="map-embed">
        <iframe
          src="{{ mapsIframe }}"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          title="Carte ‚Äî {{ site.address }}"></iframe>
      </div>
      <p class="map-note">{{ i18n.fr.MapNote or "Zoomez la carte pour voir les acc√®s et le stationnement." }}</p>
    </div>
  </div>
</section>
