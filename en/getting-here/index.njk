{% set addr = (site.address | replace("Â·"," ") | trim) %}
{% set qAddr = addr | urlencode %}
{% set pid = site.placeId %}
{% set hasCoords = site.lat and site.lng %}
{% set qCoords = hasCoords ? (site.lat ~ "," ~ site.lng) : "" %}
{% set zoom = 16 %}

{# External links: prefer place_id for opening in Maps #}
{% if pid %}
  {% set mapsHref = "https://www.google.com/maps/search/?api=1&query=" ~ (hasCoords ? qCoords : qAddr) ~ "&query_place_id=" ~ pid %}
  {% set writeReviewHref = "https://search.google.com/local/writereview?placeid=" ~ pid %}
{% else %}
  {% set mapsHref = "https://www.google.com/maps/search/?api=1&query=" ~ (hasCoords ? qCoords : qAddr) %}
  {% set writeReviewHref = mapsHref %}
{% endif %}

{# Iframe src (no API key): mapsEmbed > coords > address #}
{% if site.mapsEmbed %}
  {% set mapsIframe = site.mapsEmbed %}
{% elif hasCoords %}
  {% set mapsIframe = "https://www.google.com/maps?output=embed&q=" ~ qCoords ~ "&z=" ~ zoom %}
{% else %}
  {% set mapsIframe = "https://www.google.com/maps?output=embed&q=" ~ qAddr ~ "&z=" ~ zoom %}
{% endif %}

<section class="section">
  <h1>{{ i18n.en.HowToGetHere }}</h1>

  <div class="gethere-grid">
    <div class="card contact-box">
      <h3>{{ i18n.en.Address }}</h3>
      <p>ğŸ“ {{ site.address }}</p>

      <div class="cta-row">
        <a class="btn" href="tel:+34948840496">ğŸ“ {{ i18n.en.Call }}</a>
        <a class="btn alt" href="mailto:{{ site.email }}">âœ‰ {{ i18n.en.Write }}</a>
      </div>

      <a class="btn wide" href="{{ mapsHref }}" target="_blank" rel="noopener">
        {{ i18n.en.OpenInMaps or "Open in Google Maps" }}
      </a>
    </div>

    <div class="map-card">
      <div class="map-embed">
        <iframe
          src="{{ mapsIframe }}"
          loading="lazy"
          allowfullscreen
          referrerpolicy="no-referrer-when-downgrade"
          title="Map â€” {{ site.address }}"></iframe>
      </div>
      <p class="map-note">{{ i18n.en.MapNote or "Zoom the map to see access and parking." }}</p>
    </div>
  </div>
</section>
