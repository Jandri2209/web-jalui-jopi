{# lang: "es" | "en" | "fr" viene del front matter #}
{% set all = { "es": "/es/", "en": "/en/", "fr": "/fr/" } %}

<nav class="lang-switch" aria-label="Language switcher">
  {% for code, url in all %}
    <a href="{{ url }}" lang="{{ code }}" hreflang="{{ code }}"
       class="lang{% if code == lang %} is-active{% endif %}"
       {% if code == lang %}aria-current="page"{% endif %}>
      <img
        src="/assets/flags/{{ 'gb' if code == 'en' else code }}.svg"
        width="20" height="14"
        alt="{{ code | upper }}">
    </a>
  {% endfor %}
</nav>
