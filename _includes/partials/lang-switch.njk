{# lang: "es" | "en" | "fr" viene del front matter #}
{% set all = { "es": "/es/", "en": "/en/", "fr": "/fr/" } %}

<nav class="lang-switch" aria-label="Language switcher">
  {% for code, url in all %}
    <a href="{{ url }}" lang="{{ code }}" hreflang="{{ code }}"
       class="lang {{ code == lang ? 'is-active' : '' }}"
       aria-current="{{ code == lang ? 'page' : undefined }}">
      <img
        src="/assets/flags/{{ code == 'en' ? 'gb' : code }}.svg"
        width="20" height="14"
        alt="{{ code | upper }}">
    </a>
  {% endfor %}
</nav>
